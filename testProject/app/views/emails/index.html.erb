
<h1>Listing emails</h1>
 
<table>
  <tr>
    <th>Subject</th>
    <th>Message</th>
    <th></th>
  </tr>
 
<% @allEmails.each do |email| %>
  <tr>
    <td><%= email.subject %></td>
    <td><%= email.message %></td>
    <td><%= link_to 'Update', edit_email_path(email) %></td>
  </tr>
  <% end %>
</table>
 

